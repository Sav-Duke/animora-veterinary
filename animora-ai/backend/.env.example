# Database Configuration
MONGODB_URI=mongodb://localhost:27017/animora
PORT=4001

# AI Provider Configuration
# Choose one: together, groq, ollama
# RECOMMENDED: together (best balance of speed and quality)
AI_PROVIDER=together

# API Keys for AI Providers
# Together AI - Free tier available (RECOMMENDED)
# Sign up at: https://api.together.xyz/signup
# Get $5 free credits, then $0.20 per 1M tokens
TOGETHER_API_KEY=your_together_api_key_here

# Groq - Fast free tier (alternative)
# Sign up at: https://console.groq.com/keys
# Free tier: 14,400 requests/day
GROQ_API_KEY=

# Ollama - Local LLM (no API key needed, requires local installation)
# Install from: https://ollama.ai
# Run: ollama serve
# Then: ollama pull llama2
# Set: AI_PROVIDER=ollama

# Legacy OpenAI (if you want to use it instead of free alternatives)
# OPENAI_API_KEY=your_key_here
